{
  "compilerOptions": {
    "module": "Node16",
    "target": "ES2022",
    "outDir": "out",
    "rootDir": "src",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"], // 仅包含 src 目录下的文件
  "exclude": [
    "node_modules",
    "test/**/*", // 排除测试目录
    "eslint.config.mjs" // 排除根目录的 ESLint 配置文件
  ]
}
